<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net8.0;net9.0;net10.0;</TargetFrameworks>
        <LangVersion>14</LangVersion>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>EnhancedLinq.Async</Title>
        <Authors>Alastair Lundy</Authors>
        <Copyright>Copyright (c) 2025 Alastair Lundy</Copyright>
        <RepositoryUrl>https://github.com/alastairlundy/Enhancedlinq</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Description>Additional LINQ style Deferred and Immediate enumeration mode extension methods for .NET . </Description>
        <PackageTags>linq, enhancedlinq, enhanced, deferred-execution,extensions</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
        <IncludeSymbols>true</IncludeSymbols>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <Version>1.0.0-alpha.4</Version>
        <PackageId>EnhancedLinq.Async</PackageId>
        <PolyArgumentExceptions>true</PolyArgumentExceptions>
        <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
        <TrimmerSingleWarn>false</TrimmerSingleWarn>
        <PackageReleaseNotes>* Updated internal Polyfill version from 9.4.1 to 9.6.0</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DotExtensions" Version="9.3.1" />
        <PackageReference Include="Polyfill" Version="9.7.1" PrivateAssets="all"
                          Condition="'$(TargetFramework)' == 'netstandard2.0'"/>
        <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" Version="10.0.1"
                          Condition="'$(TargetFramework)' == 'netstandard2.0'" />
        <PackageReference Include="System.Linq.AsyncEnumerable" Version="10.0.1"
                          Condition="'$(TargetFramework)' == 'netstandard2.0' OR '$(TargetFramework)' == 'net8.0' OR '$(TargetFramework)' == 'net9.0'"/>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Internals\Localizations\Resources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Internals\Localizations\Resources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\EnhancedLinq.Shared.Infra\EnhancedLinq.Shared.Infra.csproj" PrivateAssets="all" />
    </ItemGroup>

</Project>
