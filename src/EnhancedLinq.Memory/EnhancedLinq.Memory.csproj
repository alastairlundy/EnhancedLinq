<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net8.0;net9.0;net10.0;</TargetFrameworks>
        <LangVersion>14</LangVersion>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>EnhancedLinq.Memory</Title>
        <Authors>Alastair Lundy</Authors>
        <Description>LINQ style Immediate enumeration mode extension methods for Spans and Memory. </Description>
        <Copyright>Copyright (c) 2026 Alastair Lundy</Copyright>
        <RepositoryUrl>https://github.com/alastairlundy/EnhancedLinq</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>linq, enhanced-linq, enhanced, extensions, memory, extensions</PackageTags>
        <PackageReleaseNotes>* Updated internal Polyfill version from 9.7.2 to 9.8.1
* Updated DotExtensions.Memory from 9.4.1 to 9.5.1</PackageReleaseNotes>
        <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <IncludeSymbols>true</IncludeSymbols>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <Version>1.0.0-alpha.6</Version>
        <PackageId>EnhancedLinq.Memory</PackageId>
        <PolyArgumentExceptions>true</PolyArgumentExceptions>
        <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
        <TrimmerSingleWarn>false</TrimmerSingleWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DotExtensions.Memory" Version="9.6.2" />
        <PackageReference Include="DotExtensions" Version="9.6.2" />
        <PackageReference Include="DotPrimitives.Collections" Version="4.3.0" />
        <PackageReference Include="Polyfill" Version="9.9.0" PrivateAssets="all"
                          Condition="'$(TargetFramework)' == 'netstandard2.0'"/>
    </ItemGroup>
    
    <ItemGroup>
      <EmbeddedResource Update="Internals\Localizations\Resources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Internals\Localizations\Resources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
        <Content Include="README.md">
            <Link>README.md</Link>
            <PackagePath>README.md</PackagePath>
        </Content>
    </ItemGroup>
</Project>
