<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;netstandard2.0;</TargetFrameworks>
        <LangVersion>13</LangVersion>
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>EnhancedLinq.Memory</Title>
        <Authors>Alastair Lundy</Authors>
        <Description>LINQ style Immediate enumeration mode extension methods for Spans and Memory. </Description>
        <Copyright>Copyright (c) 2025 Alastair Lundy</Copyright>
        <RepositoryUrl>https://github.com/alastairlundy/EnhancedLinq</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>linq, enhanced-linq, enhanced, extensions, memory, extensions</PackageTags>
        <PackageReleaseNotes>## Changes since 0.6.0
* Update DotExtensions to 8.6.2
* Added limited .NET Standard 2.0 support
* Added Span ``Contains`` and ReadOnlySpan ``Contains`` immediate mode extension methods for .NET Standard 2.0 users</PackageReleaseNotes>
        <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <IncludeSymbols>true</IncludeSymbols>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <Version>0.7.0</Version>
        <AssemblyName>AlastairLundy.EnhancedLinq.Memory</AssemblyName>
        <PackageId>AlastairLundy.EnhancedLinq.Memory</PackageId>
        <RootNamespace>AlastairLundy.EnhancedLinq.Memory</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AlastairLundy.DotExtensions" Version="8.6.2" />
        <PackageReference Include="AlastairLundy.DotPrimitives.Collections" Version="3.3.0" />
        <PackageReference Include="Polyfill" Version="8.9.0" PrivateAssets="all"
                          Condition="'$(TargetFramework)' == 'netstandard2.0'"/>
    </ItemGroup>
    
    <ItemGroup>
      <EmbeddedResource Update="Internals\Localizations\Resources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Internals\Localizations\Resources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
        <Content Include="README.md">
            <Link>README.md</Link>
            <PackagePath>README.md</PackagePath>
        </Content>
    </ItemGroup>
</Project>
